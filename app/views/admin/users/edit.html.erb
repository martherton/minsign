<div class="logo" id="logosearch" >
		<%= image_tag 'logo.svg' %>
	
</div>	
<div class ="edituser">
<h4>Approve and set role</h4>

<%= simple_form_for [@user], url: admin_user_path, method: :put do |f| %>
<%= f.input :email, label: false %>
<%= f.input :approved %>
<%= f.association :roles, as: :check_boxes %>
<%= f.button :submit, "Alter user info" %>
 
<% end %>
</div>