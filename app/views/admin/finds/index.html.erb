<div class="logo" id="logosearch" >
		<%= image_tag 'logo.svg' %>
	
</div>	
<div class="newopen">
<h4>Filters</h4>
<%= simple_form_for :search, url: admin_finds_path, method: :get do |f| %>
	<h4>search for specific term</h4><%= f.input :q, label: false %>
	<%= f.button :submit, "Search" %> 
<% end %>	
<%= simple_form_for :search, url: admin_finds_path, method: :get do |f| %>
	<h4>search for a specific users searches</h4><%= f.input :q1, collection: @users,  label_method: :email, value_method: :id, label: false, prompt: "email" %>
	<%= f.button :submit, "Find" %> 
<% end %>	
<%= simple_form_for :search, url: admin_finds_path, method: :get do |f| %>
	<h4>search for a specific module searches</h4><%= f.input :q2, collection: @linkcats,  label_method: :linkcatname, value_method: :id, label: false, prompt: "Module" %>
	<%= f.button :submit, "Find" %> 
<% end %>	
</div>
<h4>Total number of searches:<%= @findscount %></h4>

<% @findslinkcat.each do |findslinkcat, count| %>
	<% if findslinkcat.nil?%><% elsif findslinkcat ==0 %><% else %><%= Linkcat.find(findslinkcat).linkcatname %><% end %>
	<%= "#{count}" %>
	</br>
<% end %>	

<% @findsuser.each do |findsuser, count| %>
	<%= User.find(findsuser).lname %>
	<%= "#{count}" %>
	</br>
<% end %>	
<div class="modadmin">
<table>
	<thead>
		<tr>
			<th>id number</th>
			<th>term searched</th>
			<th>name</th>
			<th>Module</th>
		</tr>
	</thead>		
	<tbody>
<% @finds.each do |finds| %>
	<tr>
		<td><%= finds.id %></td>
		<td><%= finds.searchterm %></td>
	<% @user = User.where(:id => finds.user_id) %>
	<% @linkcat = Linkcat.where(:id => finds.linkcat_id) %>
	<% @user.each do |user| %>
		<td><%= user.fname %>
		<%= user.lname %></td>
	<% end %>
	<% @linkcat.each do |linkcat| %>
	  <td><%= linkcat.linkcatname %></td>

	<% end %>  
	</tr>
<% end %>
</tbody>
</table>	
</div>

