<div class="logo" id="logosearch" >
		<%= image_tag 'logo.svg' %>
	
</div>	

<b><%= link_to "Create Topic", new_user_linkcat_path(current_user.id) %></b>
<div class="modadmin">
<table>
	<thead>
		<tr>
			<th>Module name</th>
			<th>Created by</th>
			<th>Module Type</th>
			<th>Module description</th>
			
			<th>Edit module</th>
			<th>View all module links</th>
		</tr>
	</thead>
	<tbody>	
		<% policy_scope(@linkcats).each do |linkcat| %>
		<tr>
			<td id="tabname"><%= linkcat.linkcatname %></td>
			<td id="tabname"><%= User.find(linkcat.user_id).fname %>&nbsp<%=	User.find(linkcat.user_id).lname %></td>
			<td id="tabname"><%= linkcat.linkcattype %></td>
			<td id="tablongtxt" ><%= linkcat.linkcatdesc %></td>
			
			<td id="tablink"><%= link_to "Edit", edit_user_linkcat_path(current_user.id, linkcat.id) %></td>
			<% if linkcat.linkcattype == "Curated Weblinks" %>
				<td id="tablink" ><%= link_to "View all links for this module", user_wlinks_path(query: linkcat.id) %></td>
			<% else %>
				<td id="tablink"><%= link_to "View all data for this module", dataentered_user_path(current_user.id, query: linkcat.id) %></td>
			<% end %>	
				
		</tr>		
<% end %>
</tbody>
</table>
</div>