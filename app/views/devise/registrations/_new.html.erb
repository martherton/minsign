<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="emailinput" >
     <%= f.input :email, required: true, autofocus: true %>
    </div>
    <div class="suppinfo">
      <%= f.input :fname, required: true, label: 'Your first name' %>
      <%= f.input :lname, required: true, label: 'Your last name' %>
      <%= f.input :company, required: true, label: 'Your company name' %>
      <%= f.input :position, required: true, label: 'Your position' %>
      <h6>All fields are required</h6>
      
    </div>  
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
