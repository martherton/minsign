<div class="logo" id="logosearch" >
		<%= image_tag 'logo.svg' %>
	
</div>	

<div class="newopen" >
<h2>New heading</h2>


<%= simple_form_for @docstructure, url: user_docstructures_path, method: :post do |f| %>

  <%= f.input :headingname, label: false, placeholder: "name" %>
  Is this a live issue<%= f.input :liveissue, label: false %>

  <div class="hid">
  <b>Release to public?<%= f.input :released, label: false, :iput_html => { :checked => false} %></b>
   <%= f.input :sandbox, :input_html => { :checked => true }  %>
  
  </div>

  <%= f.button :submit, 'Add new heading' %>

  <h4>Check the list of existing headings before adding another.  Make sure that the headings are set as 'breadcrumb' ie they refer the heading above directly.</h4>

<% end %>
</div>